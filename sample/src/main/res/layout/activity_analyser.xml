<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<com.google.android.material.appbar.AppBarLayout
		android:id="@+id/appBarLayout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<androidx.appcompat.widget.Toolbar
			android:id="@+id/toolbar"
			android:layout_width="match_parent"
			android:layout_height="wrap_content" />

	</com.google.android.material.appbar.AppBarLayout>

	<FrameLayout
		android:id="@+id/content"
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<com.majorik.sparklinelibrary.SparkLineLayout
			android:id="@+id/graphOriginal"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			app:s_line_bezier="0.5"
			app:s_line_color="#ff0000"
			app:s_line_thickness="1dp"
			app:s_marker_background_color="#ff0000"
			app:s_marker_width="16dp" />

		<com.majorik.sparklinelibrary.SparkLineLayout
			android:id="@+id/graphConstantFilter"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			app:s_line_bezier="0.5"
			app:s_line_color="#00ff00"
			app:s_line_thickness="1dp"
			app:s_marker_background_color="#00ff00"
			app:s_marker_width="16dp" />

		<com.majorik.sparklinelibrary.SparkLineLayout
			android:id="@+id/graphKalman"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			app:s_line_bezier="0.5"
			app:s_line_color="#0000ff"
			app:s_line_thickness="1dp"
			app:s_marker_background_color="#0000ff"
			app:s_marker_width="16dp" />

	</FrameLayout>

</LinearLayout>